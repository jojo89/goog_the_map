<div class="banner">
  <h1>{{ "Tweet Locator" }}</h1>
</div> 
<div class="display">
 <div  ng-controller="MapController as geo">
   <div id ="clear-tweet" ng-click="geo.flush()"><h3>Clear<br>Map</h3></div>
   <div id="map-canvas"></div>
   <div id="profile" ng-style="data.style" >
     <img class="profile-pic" ng-src="{{geo.featuredTweet.profile_image.replace('_normal', '')}}" ng-show="geo.featuredTweet" />
     <a id= "tweeter-page" href="{{'https://twitter.com/' + geo.featuredTweet.user}}"><h3 class="screenname">{{geo.featuredTweet.user}}</h3></a>
     <div class="tweet"><p>{{geo.featuredTweet.text}}</p></div>
   </div>
  <div id="list">
    <h1>Hottest Tweets</h1>
      <ol>
        <li ng-class="{'highlight': tweet == geo.featuredTweet}" ng-click="geo.changedFeatured(tweet)" ng-repeat="tweet in geo.tweets | limitTo: 10 " >{{tweet.user}}- {{tweet.text.trunc(17) + "..." }} {{tweet.retweet_count }}</li>
      </ol>
    </div>
     <div id="expose">
      <form class="round" id="srch_map" name="reviewForm" ng-submit="geo.codeAddress()">
        <label for="zip">Where would you like to search!</label>
        <input ng-model="geo.search.place" type="text" id="zip" name="zip" placeholder="Zip Code">
        <input id="zip_srch" class="button" type="submit"  value="relocate" ng-submit="loadData()">
      </form>    
      <form class="round" id="srch_map" name="reviewForm" ng-submit="loadData()">
        <label for="phrase">Tweet Search</label>
          <input ng-model="geo.search.phrase" type="text" id="phrase" name="phrase" placeholder="What you are looking for?">
        <input id="find_tweets" class="button" type="submit"  value="Search!" >
      </form>
    </div>
  </div>
  <div id="directions">
    <instructions>
   </instructions>
   </div>
 </div>
<footer id="foot">
</footer>
